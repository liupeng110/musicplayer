<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:id="@+id/notice_view_type_0_big">

    <ImageView
        android:id="@+id/icon_iv_big"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="10dp"
                android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Line2"
                android:lines="1"
                android:textSize="15dp"
                android:text="弹剑记.落魄江湖十五载"
                />

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textSize="13dp"
                android:layout_marginTop="2dp"
                android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Line2"
                android:text="于魁智"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:id="@+id/notifi_left_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/notifi_left" />

            <ImageView
                android:id="@+id/notifi_pause_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/notifi_pause" />

            <ImageView
                android:id="@+id/notifi_right_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/notifi_right" />


        </LinearLayout>

        <ImageView
            android:id="@+id/notifi_ci_big"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:src="@mipmap/notifi_ci"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/notifi_close_big"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@mipmap/notifi_close"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>




</LinearLayout>