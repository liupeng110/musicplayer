<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notice_view_type_0">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="64dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"/>

    <LinearLayout
        android:layout_width="84dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:layout_width="95dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Line2"
            android:lines="1"
            android:textSize="15dp"
            android:text="弹剑记.落魄江湖十五载"
            />

        <TextView
            android:layout_width="95dp"
            android:layout_height="20dp"
            android:textSize="13dp"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.StatusBar.EventContent.Line2"
            android:text="于魁智"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/notifi_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/notifi_left" />

        <ImageView
            android:id="@+id/notifi_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/notifi_pause" />

        <ImageView
            android:id="@+id/notifi_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/notifi_right" />

        <ImageView
            android:id="@+id/notifi_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/notifi_close" />


    </LinearLayout>

</LinearLayout>